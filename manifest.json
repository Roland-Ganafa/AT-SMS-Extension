{
  "manifest_version": 3,
  "name": "AT SMS Extension",
  "version": "1.0",
  "description": "Send bulk SMS using AfricasTalking API",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.africastalking.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://*.africastalking.com"
  }
}
